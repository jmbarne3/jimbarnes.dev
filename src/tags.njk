---
layout: base
pagination:
  data: collections.postTags
  size: 1
  alias: tag
permalink: /tags/{{ tag | slugify }}/
---
<h2 class="mb-4">Posts about <span class="italic">{{ tag }}</span></h2>
<div class="grid grid-flow-row md:grid-flow-col grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-x-4 gap-y-2">
  {% for post in collections.currentPosts.reverse() %}
  <article class="card">
    {% if post.data.hero %}
    {% image "mb-2 rounded-md", post.data.hero, post.data.heroalt, "100vw" %}
    {% endif %}
    <a href="{{ post.url | url }}"><span class="post-title">{{ post.data.title }}</span></a>
    <p class="post-deck">{{ post.data.deck }}</p>
    <ul>
    {% for topic in post.data.topics %}
      <li><a href="{{ topic | url }}">{{ topic }}</a></li>
    {% endfor %}
    </ul>
  </article>
  {% endfor %}
</div>
